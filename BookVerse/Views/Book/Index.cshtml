<div class="card border-primary mb-3">
    <div class="card-header bg-primary text-white">
        <h3>Books</h3>
    </div>
    <div class="card-body">
        <div class="container">
            <div class="row pt-4 pb-2">
                <div class="col-12 text-end">
                    <a asp-controller="Book" asp-action="Create" class="btn btn-primary">
                        Neue Book <i class="bi bi-plus-circle"></i>
                    </a>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-bordered table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Title</th>
                            <th>Content</th>
                            <th>Author</th>
                            <th>Date Posted</th>
                            <th>Category</th>
                            <th>Cover Image</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Title</td>
                                <td>@Html.Raw(item.Content)</td>
                                <td>@item.Author</td>
                                <td>@item.Posteddate.ToString("dd/MM/yyyy HH:mm:ss")</td>
                                <td>@(item.Category != null ? item.Category.Name : "N/A")</td>
                                <td>
                                    <img src="@item.ImageName" asp-append-version="true" class="img-thumbnail" alt="Cover Image" style="max-width: 100px; max-height: 50px;" />
                                </td>
                                <td style="width:300px">
                                    <div class="btn-group d-flex justify-content-center ">
                                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary me-2"><i class="bi bi-pencil-square"></i> Edit</a>
                                        <a asp-controller="Category" asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i> Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
