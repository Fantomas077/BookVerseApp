@model BookVerse.Models.Book

@{
    ViewData["Title"] = "Book Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"]</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
   
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6">
                <img src="/@Model.ImageName" asp-append-version="true" class="img-fluid" alt="@Model.Title" />
            </div>
            <div class="col-md-6">
                <h1 class="display-4">@Model.Title</h1>
                <p class="lead">Author: @Model.Author</p>
                <p>Genre: @Model.Category.Name</p>
                <p>Release Date: @Model.Posteddate.ToString("MMMM dd, yyyy")</p>
                <hr />
                <div>
                    <h3>Book Content</h3>
                    <p>@Html.Raw(Model.Content)</p>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
