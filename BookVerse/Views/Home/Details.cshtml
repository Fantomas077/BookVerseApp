@model BookVerse.Models.Book

@{
    ViewData["Title"] = "Book Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title></title>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
</head>
<body>
    <section class="py-2">
        <div class="container">
            <div class="row">
                <div class="col-6">
                    <img src="/@Model.ImageName" asp-append-version="true" width="50%" />

                </div>
                <div class="col-6">
                    <div><p>Genre:@Model.Category.Name</p></div>
                    <div><p>Release Date:@Model.Posteddate</p></div>
                  

                </div>
            </div>
        </div>
    </section>
</body>
</html>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
